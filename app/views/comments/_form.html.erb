<%= form_with model: [ article, comment ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "your-css-class" %>
  </p>
  <p>
    <%= form.submit class: "bg-gray-100 px-4 py-2 rounded hover:bg-gray-200" %>
  </p>
<% end %>
